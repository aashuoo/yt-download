@bot.message_handler(func=lambda message: True)
def download_and_send_video(message):
    try:
        user_id = message.from_user.id
        if user_id in active_downloads:
            bot.send_message(message.chat.id, "ğŸ• *Another video download is in progress. Please wait.*", parse_mode="Markdown")
            return

        link = message.text
        if "youtu.be" in link:
            video_id = re.search(r"youtu.be/([^?]+)", link).group(1)
            link = f"https://www.youtube.com/watch?v={video_id}"
        if not re.match(r'^(https?://)?(www\.)?youtube\.com/watch\?v=[\w-]+(&\S*)?$', link):
            bot.send_message(message.chat.id, "âŒ *Please send a valid link.*", parse_mode="Markdown")
            return
        yt = YouTube(link)
        if yt.length > 900:
            bot.send_message(message.chat.id, "â° *Videos longer than 15 minutes cannot be downloaded.*", parse_mode="Markdown")
            return

        def show_progress(stream, chunk, bytes_remaining):
            percent = round((1 - bytes_remaining / stream.filesize) * 100, 1)
            global msg
            if percent % 1 == 0:
                try:
                    if 'msg' in globals():
                        bot.edit_message_text(f"ğŸ“¥ *Video is {percent}% downloaded...*", message.chat.id, msg.message_id, parse_mode="Markdown")
                    else:
                        msg = bot.send_message(message.chat.id, f"ğŸ“¥ *Video is {percent}% downloaded...*", parse_mode="Markdown")

                except:
                    pass
        started_message = bot.send_message(message.chat.id, "ğŸ“¥ *Downloading started!*", parse_mode="Markdown")
        active_downloads[user_id] = True
        video = yt.streams.get_highest_resolution().download(Path("./tmp")) 
        bot.delete_message(message.chat.id, started_message.message_id)
        bot.send_message(message.chat.id, "âœ… *Video download process successfully completed! Sending the video...*", parse_mode="Markdown")
        bot.send_chat_action(message.chat.id, "upload_video")

        with open(video, "rb") as video_file:
            bot.send_video(message.chat.id, video_file)
        Path(video).unlink()
        del active_downloads[user_id]
    except Exception as e:
        bot.send_message(message.chat.id, f"âŒ *An error occurred:* `{e}`\n*Please Try Again*", parse_mode="Markdown")

bot.infinity_polling()